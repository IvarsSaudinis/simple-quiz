{% extends "layouts/base.twig" %}

{% block title %}{{ title }}{% endblock %}
{% block head %}
{{ parent() }}
<style type="text/css">
    .important {
        color: #336699;
    }
</style>
{% endblock %}
{% block content %}

    <form method="post">
        <input type="hidden" name="csrf" value="{{ csrf }}">
        <input type="hidden" name="question" value="{{ question['id'] }}" >
        <h1 class="text-center">
          {{ question['text'] }}
        </h1>

        <div class="row">
            {% for answer in answers  %}
                <div class="col-md-6 mt-4">
                    <button class="btn btn-lg btn-primary w-100" name="answer" type="submit" value="{{ answer['id'] }}">{{ answer['text'] }}</button>
                </div>
            {% endfor %}
        </div>

        <p class="mt-5">
            <progress class="w-100" id="progress" value="{{ count }}" max="{{ total_count }}" title="Atbildēti {{ count }} no {{ total_count }} jautājumiem">{{ count }} no {{ total_count }} </progress>
        </p>
    </form>



<hr/>
      <a class="btn btn-button" href="/?end_quiz=2">Pārtraukt testu!</a>


{% endblock %}